{
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 80,
	"useTabs": true,
	"arrowParens": "always",
	"bracketSpacing": true,
	"jsxSingleQuote": false,
	"endOfLine": "lf",
	"quoteProps": "preserve",
	"importOrder": [
		"^(react|next?/?([a-zA-Z/]*))$",
		"<THIRD_PARTY_MODULES>",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderBuiltinModulesToTop": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
